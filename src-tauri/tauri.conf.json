{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mdvim",
  "version": "0.9.2",
  "identifier": "com.mdvim.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "mdvim v0.9.2",
        "width": 1200,
        "minWidth": 600,
        "minHeight": 400
      }
    ]
  },
  "plugins": {
    "cli": {
      "description": "mdvim - Markdown Editor with Vim keybindings",
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true,
          "description": "File to open"
        }
      ]
    }
  }
}
