{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "mdvim",
    "version": "0.9.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "http": {
        "all": true,
        "scope": ["https://**", "http://**"]
      }
    },
    "cli": {
      "description": "mdvim - Markdown Editor with Vim keybindings",
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true,
          "description": "File to open"
        }
      ]
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.mdvim.app",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "mdvim",
        "width": 1200,
        "minWidth": 600,
        "minHeight": 400,
        "fileDropEnabled": true
      }
    ]
  }
}
