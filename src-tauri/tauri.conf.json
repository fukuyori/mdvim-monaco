{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mdvim",
  "version": "1.0.0",
  "identifier": "com.mdvim.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "category": "Productivity",
    "shortDescription": "Markdown Editor with Vim keybindings",
    "longDescription": "mdvim is a powerful Markdown editor built on Monaco Editor with full Vim keybindings support. Features include live preview, multiple themes, project management, KaTeX math, Mermaid diagrams, and more.",
    "copyright": "Copyright Â© 2024 mdvim",
    "licenseFile": "../LICENSE",
    "resources": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": null,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "languages": ["English", "Japanese"],
        "displayLanguageSelector": true,
        "compression": "lzma"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "section": "editors",
        "priority": "optional"
      }
    },
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "name": "Markdown Document",
        "description": "Markdown text document",
        "role": "Editor",
        "mimeType": "text/markdown"
      },
      {
        "ext": ["mdvim"],
        "name": "mdvim Project",
        "description": "mdvim project file",
        "role": "Editor",
        "mimeType": "application/x-mdvim"
      }
    ]
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "mdvim v1.0.0",
        "width": 1200,
        "minWidth": 600,
        "minHeight": 400,
        "dragDropEnabled": true
      }
    ]
  },
  "plugins": {
    "cli": {
      "description": "mdvim - Markdown Editor with Vim keybindings",
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true,
          "description": "File to open"
        }
      ]
    }
  }
}
